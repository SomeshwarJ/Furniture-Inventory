</body>
    <script>
        function calc() {
            var tot=document.getElementById("quantity").value*Number(document.getElementById("rate").value);
            var tc=((document.getElementById("percent").value/100)*Number(tot))+Number(tot)+Number(document.getElementById("delivery").value)
            document.getElementById("cost").value=tc;
        }       
    </script>
