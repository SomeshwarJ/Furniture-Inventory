                <div class="container-fluid">
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Edit Records</h1>
                    </div>
                    <div class="wrapper">
                        <form class="form-right" action="/Staff-Admin/editrecord" method="post">
                            <% if (record!=""){%>
                                <input type="hidden" value="<%= record._id %>" name="id">
                                <div class="row">
                                    <div class="col-sm-6 mb-3">
                                        <label class="control-label">Product Name</label>
                                        <input type="text" name="pname" class="input-field" value="<%= record.productName%>" required>
                                    </div>
                                    <div class="col-sm-6 mb-3">
                                        <label class="control-label">Quantity</label>
                                        <input type="number" name="quantity" onkeyup="calc()" id="quantity" class="input-field" value="<%= record.quantity%>" required>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-9 mb-3">
                                        <label class="control-label">Description</label>
                                        <textarea type="text" rows="1" class="input-field" name="description" required><%= record.description%></textarea>
                                    </div>
                                    <div class="col-sm-3 mb-3">
                                        <label class="control-label">Invoice</label>
                                        <input type="number" name="invoice" class="input-field" value="<%= record.inVoice%>" required>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-4 mb-3">
                                        <label class="control-label">Date of Purchase</label>
                                        <input type="date" name="dop" class="input-field" value="<%= record.dop%>" required>
                                    </div>
                                    <div class="col-sm-4 mb-3">
                                        <label class="control-label">Company</label>
                                        <input type="text" name="company" class="input-field" value="<%= record.company%>" required>
                                    </div>
                                    <div class="col-sm-4 mb-3">
                                        <label class="control-label">Original Rate</label>
                                        <input type="number" name="rate" step="0.01" onkeyup="calc()" id="rate" class="input-field" value="<%= record.rate%>" required>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-4 mb-3">
                                        <label class="control-label">Tax Type</label>
                                        <select class="input-field" name="taxtype">
                                            <option value="GST">GST</option>
                                            <option value="VAT">VAT</option>
                                        </select>
                                    </div>
                                    <div class="col-sm-4 mb-3">
                                        <label class="control-label">Tax Percentage</label>
                                        <input type="number" onkeyup="calc()" name="percent" id="percent" class="input-field" value="<%= record.percentage%>" required>
                                    </div>
                                    <div class="col-sm-4 mb-3">
                                        <label class="control-label">Delivery Charge</label>
                                        <input type="number" name="delivery" onkeyup="calc()" step="0.01" id="delivery" class="input-field" value="<%= record.delivery%>" required>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-6 mb-3">
                                        <label class="control-label">Total Cost</label>
                                        <input type="number" name="cost"  id="cost" step="0.01" class="input-field" value="<%= record.cost%>" readonly required>
                                    </div>
                                    <div class="col-sm-6 mb-3">
                                        <label class="control-label">Warranty</label>
                                        <input type="date" name="warranty" class="input-field" value="<%= record.warranty%>" required>
                                    </div>
                                </div>
                                <div class="mt-2 text-center">
                                    <button type="submit" id="success" class="register">Modify</button>
                                </div>
                            <%}%>
                        </form>
                    </div>
                </div>
            </div>
            <footer class="sticky-footer bg-white">
