    <link rel="stylesheet" href="/css/form.css">
</head>

<body id="page-top">
    <div id="wrapper">
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">
            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="/Staff-Admin/dashboard">
                <div class="sidebar-brand-icon rotate-n-15">
                    <i class="fas fa-chalkboard-teacher"></i>
                </div>
                <div class="sidebar-brand-text mx-3">STAFF ADMIN</div>
            </a>
            <hr class="sidebar-divider my-0">
            <li class="nav-item">
                <a class="nav-link" href="/Staff-Admin/dashboard">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Dashboard</span></a>
            </li>
            <hr class="sidebar-divider">
            <div class="sidebar-heading">
                Interface
            </div>
            <li class="nav-item">
                <a class="nav-link" href="/Staff-Admin/addrecords">
                    <i class="fas fa-fw fa-plus-square"></i>
                    <span>Add Records</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Staff-Admin/unverifedrecords">
                    <i class="fas fa-fw fa-check-double"></i>
                    <span>Unverified Records</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Staff-Admin/verifyrecords">
                    <i class="fas fa-fw fa-table"></i>
                    <span>Approved Records</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Staff-Admin/verifystaff">
                    <i class="fas fa-fw fa-user-check"></i>
                    <span>Staff Verification</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Staff-Admin/approvedrecords">
                    <i class="fas fa-fw fa fa-file-pdf-o"></i>
                    <span>Generate PDF</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Staff-Admin/godownRecords">
                    <i class="fas fa-fw fa fa-file-pdf-o"></i>
                    <span>Godown Records</span></a>
            </li>
            <hr class="sidebar-divider d-none d-md-block">
            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle"></button>
            </div>
        </ul>
        <div id="content-wrapper" class="d-flex flex-column">
            <div id="content">
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>
                    <ul class="navbar-nav ml-auto">
                        <div class="topbar-divider d-none d-sm-block"></div>
                        <li class="nav-item dropdown no-arrow">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="mr-2 d-none d-lg-inline text-gray-600 small">
                                    <%= "" +user %>
                                </span>
                                <img class="img-profile rounded-circle" src="/img/undraw_profile.svg">
                            </a>
                            <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in"
                                aria-labelledby="userDropdown">
                                <a class="dropdown-item" href="/Staff-Admin/profile">
                                    <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Profile
                                </a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#" data-toggle="modal" data-target="#logoutModal">
                                    <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Logout
                                </a>
                            </div>
                        </li>
                    </ul>
                </nav>
                <div class="container-fluid">
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Product Details</h1>
                        <%if(msg!=""){%>
                            <div class="col-lg-3 col-md-3 col-xs-3 col-sm-3">
                                <div class="alert alert_info">
                                    <button aria-hidden="true" data-dismiss="alert" class="btn btn-primary" type="button" style="border: none;background: none;">&times;</button> 
                                    <strong><%=msg%></strong> 
                                </div>
                            </div>
                        <%}%>
                        <%if(gmsg!=""){%>
                            <div class="col-lg-3 col-md-3 col-xs-3 col-sm-3">
                                <div class="alert alert_info">
                                    <button aria-hidden="true" data-dismiss="alert" class="btn btn-primary" type="button" style="border: none;background: none;">&times;</button> 
                                    <strong><%=gmsg%></strong> 
                                </div>
                            </div>
                        <%}%>
                    </div>
                    <div class="card shadow mb-4">
                        <div class="card-body">
                            <div class="row">
                                <!-- <div class="col-sm-8 mb-3"> -->
                                    <div class="card-body">
                                        <%if (record!="") {%>
                                            <script>
                                                var date1 = new Date();
                                                var date2 = new Date("<%= record.warranty %>");
                                                var Difference_In_Time = date2.getTime() - date1.getTime();
                                                var Difference_In_Days = Number(Difference_In_Time / (1000 * 3600 * 24)).toFixed(0);
                                                if (Difference_In_Days<=0){
                                                    Difference_In_Days=0;
                                                }
                                                window.onload = function(){
                                                    document.getElementById("days").innerHTML+="  ("+Difference_In_Days+" days remaining)";
                                                }
                                            </script>
                                        <div class="row mb-4">
                                            <div class="col-sm-4">
                                                <p class="mb-0"><strong>Product Name</strong></p>
                                            </div>
                                            <div class="col-sm-6">
                                                <p class="text-muted mb-0"><%= record.productName %></p>
                                            </div>
                                        </div>
                                        <div class="row mb-4">
                                            <div class="col-sm-4">
                                                <p class="mb-0"><strong>Number Received</strong></p>
                                            </div>
                                            <div class="col-sm-6">
                                                <p class="text-muted mb-0"><%= record.quantity %></p>
                                            </div>
                                        </div>
                                        <div class="row mb-4">
                                            <div class="col-sm-4">
                                                <p class="mb-0"><strong>Date of Purchase</strong></p>
                                            </div>
                                            <div class="col-sm-6">
                                                <p class="text-muted mb-0"><%= dop %></p>
                                            </div>
                                        </div>
                                        <div class="row mb-4">
                                            <div class="col-sm-4">
                                                <p class="mb-0"><strong>Rate</strong></p>
                                            </div>
                                            <div class="col-sm-6">
                                                <p class="text-muted mb-0">&#8377; <%= record.rate %></p>
                                            </div>
                                        </div>
                                        <div class="row mb-4">
                                            <div class="col-sm-4">
                                                <p class="mb-0"><strong>Tax Type</strong></p>
                                            </div>
                                            <div class="col-sm-6">
                                                <p class="text-muted mb-0"><%= record.taxType %></p>
                                            </div>
                                        </div>
                                        <div class="row mb-4">
                                            <div class="col-sm-4">
                                                <p class="mb-0"><strong>Tax Percentage</strong></p>
                                            </div>
                                            <div class="col-sm-6">
                                                <p class="text-muted mb-0"><%= record.percentage %> &#37;</p>
                                            </div>
                                        </div>
                                        <div class="row mb-4">
                                            <div class="col-sm-4">
                                                <p class="mb-0"><strong>Company Name</strong></p>
                                            </div>
                                            <div class="col-sm-6">
                                                <p class="text-muted mb-0"><%= record.company %></p>
                                            </div>
                                        </div>
                                        <div class="row mb-4">
                                            <div class="col-sm-4">
                                                <p class="mb-0"><strong>Invoice Number</strong></p>
                                            </div>
                                            <div class="col-sm-6">
                                                <p class="text-muted mb-0"><%= record.inVoice %></p>
                                            </div>
                                        </div>
                                        <div class="row mb-4">
                                            <div class="col-sm-4">
                                                <p class="mb-0"><strong>Warranty Period</strong></p>
                                            </div>
                                            <div class="col-sm-6">
                                                <p class="text-muted mb-0" id="days"><%= warranty %></p>
                                            </div>
                                        </div>
                                        <div class="row mb-4">
                                            <div class="col-sm-4">
                                                <p class="mb-0"><strong>Total Cost</strong></p>
                                            </div>
                                            <div class="col-sm-6">
                                                <p class="text-muted mb-0">&#8377; <%= record.cost %></p>
                                            </div>
                                        </div>
                                        <div class="row mb-5">
                                            <div class="col-sm-4">
                                                <p class="mb-0"><strong>HOD Authorized</strong></p>
                                            </div>
                                            <div class="col-sm-6">
                                                <%if(record.isVerified==false){%><p class="text-danger mb-0"><i class="fa fa-times-circle text-danger"></i> Unauthorized<%} else {%><p class="text-success mb-0"><i class="fa fa-check-circle text-success"></i> Authorized<%}%></p>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-12 mb-3">
                                                <div class="text-center">
                                                    <a <%if(record.isVerified==true){%> style="pointer-events: none; opacity: 0.5;" <%}%> href="/Staff-Admin/editrecord/<%= record._id%>" class="btn btn-primary btn-lg" role="button" disabled>Modify</a>
                                                </div>
                                            </div>
                                        </div>
                                        <%}%>
                                    </div>

                                    <!-- insert table -->

                                    
                                <!-- </div> -->
                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>
            <%if(record.isVerified==true){%>
            <div class="container-fluid">
                <div class="d-sm-flex align-items-center justify-content-between mb-4">
                    <h1 class="h3 mb-0 text-gray-800">Each Item</h1>
                </div>
                <div class="card shadow">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                  <tr>
                                    <th scope="col">SI No</th>
                                    <th scope="col">Product ID</th>
                                    <th scope="col">Action</th>
                                  </tr>
                                </thead>
                                <tbody>
                                    <%if (record != "") {%>
                                        <%for(var i=0; i<(record.quantity); i++){%>
                                            <% var flag=0; %>
                                            <tr>
                                                <td scope="row"><%= i+1%></td>
                                                <td><%= record["Q_id"][i]%></td>
                                                <% if (gRec!=''){ %>
                                                    <% for (let j=0; j<gRec.length; j++){%>
                                                        <% if (gRec[j]["Q_id"]==record["Q_id"][i]){ %>
                                                            <% flag=1;%>
                                                            <%break;%>
                                                        <% } %>
                                                    <% } %>
                                                    <td>
                                                        <% if (flag==0){%>
                                                            <a href="/Staff-Admin/history/<%= record["Q_id"][i] %>">
                                                                <button class="btn btn-primary">View</button>
                                                            </a>
                                                        <%} else{%>
                                                            <a href="/Staff-Admin/history/<%= record["Q_id"][i] %>">
                                                                <button class="btn btn-primary" disabled>View</button>
                                                            </a>
                                                        <%}%>
                                                    </td>
                                                <% } %>
                                            </tr>
                                        <%}%>
                                    <%}%>
                                </tbody>
                              </table>
                        </div>
                    </div>
                </div>

            </div>
            <%}%>
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; ISTA 2023</span>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <form action="/Staff-Admin/logout" method="post">
                        <button class="btn btn-primary" type="submit">Logout</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="/js/sb-admin-2.min.js"></script>
    <script src="/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="/vendor/datatables/dataTables.bootstrap4.min.js"></script>
    <script src="/js/demo/datatables-demo.js"></script>
</body>

</html>